<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
>
    <FontFamily x:Key="ThemeFontFamily">Segoe WP, Segoe UI</FontFamily>
    <sys:Double x:Key="StandardFontSize">14</sys:Double>
    <sys:Double x:Key="HeadingFontSize">27</sys:Double>
    <sys:Double x:Key="SubHeaderFontSize">21</sys:Double>
    <sys:Double x:Key="ErrorHeaderFontSize">17</sys:Double>
    <sys:Double x:Key="MinorHeaderFontSize">17</sys:Double>
    <sys:Double x:Key="LinkButtonFontSize">16</sys:Double>

    <Thickness x:Key="SubHeaderMarginWideLeft">30,9,12,9</Thickness>
    <Thickness x:Key="SubHeaderMargin">12,9,12,9</Thickness>
    <Thickness x:Key="MinorHeaderMargin">12,12,12,9</Thickness>
    <Thickness x:Key="HeaderMargin">12,12,12,18</Thickness>
    <Thickness x:Key="TextMargin">12,6,12,6</Thickness>

    <Style TargetType="{x:Type Window}">
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
    </Style>
</ResourceDictionary>